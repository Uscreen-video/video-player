{
  "name": "@uscreentv/video-player",
  "version": "0.2.0",
  "type": "module",
  "description": "Video player as customizable web-component",
  "main": "./dist/video-player.umd.cjs",
  "module": "./dist/video-player.js",
  "exports": {
    ".": {
      "import": "./dist/video-player.js",
      "require": "./dist/video-player.umd.cjs"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "types/index.d.ts"
      ]
    }
  },
  "files": [
    "dist/**/*",
    "types/**/*"
  ],
  "customElements": "custom-elements.json",
  "scripts": {
    "dev": "vite dev",
    "manifest": "custom-elements-manifest analyze",
    "manifest:watch": "pnpm manifest --watch",
    "test": "echo \"Error: no test specified\" && exit 1",
    "generate": "hygen component new",
    "clean": "rm -rf dist types",
    "build": "pnpm run clean && pnpm run build:types && pnpm run build:lib",
    "build:lib": "vite build",
    "build:types": "tsc --declaration --emitDeclarationOnly",
    "postinstall": "pnpm run manifest",
    "prepare": "husky"
  },
  "keywords": [
    "lit",
    "video-player",
    "hls",
    "web-component",
    "html5 video",
    "player"
  ],
  "author": "Uscreen <support@uscreen.tv> (https://www.uscreen.tv)",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@custom-elements-manifest/analyzer": "^0.9.3",
    "@open-wc/lit-helpers": "0.7.0",
    "@types/chromecast-caf-sender": "^1.0.9",
    "@types/debug": "^4.1.12",
    "@types/node": "^20.11.30",
    "cem-plugin-better-lit-types": "0.2.1",
    "husky": "^9.0.11",
    "hygen": "^6.2.11",
    "lint-staged": "^15.2.2",
    "postcss": "^8.4.36",
    "postcss-nesting": "^12.1.0",
    "postcss-preset-env": "^9.5.2",
    "postcss-simple-vars": "^7.0.1",
    "prettier": "3.2.5",
    "typescript": "^5.4.2",
    "typescript-json-schema": "^0.63.0",
    "vite": "^5.1.6",
    "web-component-analyzer": "2.0.0"
  },
  "optionalDependencies": {
    "hls.js": "^1.5.7",
    "lit": "^3.1.2",
    "lit-html": "^3.1.2",
    "mux-embed": "^5.2.0"
  },
  "dependencies": {
    "@lit/context": "^1.1.0",
    "@lit/reactive-element": "^2.0.4",
    "@popperjs/core": "^2.11.8",
    "debug": "^4.3.4"
  },
  "lint-staged": {
    "**/*.js": "prettier --write --ignore-unknown"
  }
}
